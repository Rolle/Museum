<script>
    $(function() {
        numbers_to_pages = {};

        numbers_to_pages[100] = "pages/saegeblatt.html";
        numbers_to_pages[200] = "pages/pressluft.html";
        numbers_to_pages[300] = "pages/tradition.html";

        $('#goto').on('submit',function(e){
            e.preventDefault();
            number = $('#numbertag')[0].value
            if (numbers_to_pages[number] !== undefined) {
                $.mobile.navigate(numbers_to_pages[number]);
            } else {
                $('#popupDialog').popup('open');
            }

        });
    });
</script>